{
    "name": "kichat",
    "version": "1.0.0",
    "description": "Kichat for kick.com chat",
    "author": "encoderpie",
    "main": "main.js",
    "type": "module",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.encoderpie.kichat",
        "win": {
            "target": "nsis",
            "icon": "resources/kichat.ico",
            "requestedExecutionLevel": "asInvoker",
            "extraResources": {
                "from": "resources/",
                "to": "resources/"
            }
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Kichat"
        },
        "files": [
            "main.js",
            "lib.js",
            "utils.js",
            "preload.js",
            "package.json",
            "node_modules/**",
            "public/**"
        ]
    },
    "devDependencies": {
        "electron": "^31.3.0",
        "electron-builder": "^24.13.3"
    },
    "dependencies": {
        "axios": "^1.7.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "electron-store": "^10.0.0",
        "express": "^4.19.2",
        "puppeteer": "^22.14.0",
        "puppeteer-extra": "^3.3.6",
        "puppeteer-extra-plugin-stealth": "^2.11.2",
        "pusher-js": "^8.4.0-rc2"
    }
}
